<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>auto-investor</Name>
  <Repository>ghcr.io/kenyonj/auto-investor:latest</Repository>
  <Registry>https://github.com/kenyonj/auto-investor/pkgs/container/auto-investor</Registry>
  <Branch>
    <Tag>latest</Tag>
    <TagDescription>Latest stable release</TagDescription>
  </Branch>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/kenyonj/auto-investor/issues</Support>
  <Project>https://github.com/kenyonj/auto-investor</Project>
  <Overview>
    AI-driven automated trading bot using Claude AI + Alpaca API.
    Trades equities during market hours and crypto 24/7.
    Features a real-time web dashboard with WebSocket updates, split equity/crypto P&amp;L, position tracking, and AI decision history.
    Paper trading by default.
  </Overview>
  <Category>Productivity: Finance:</Category>
  <WebUI>http://[IP]:[PORT:8000]/</WebUI>
  <Icon>https://raw.githubusercontent.com/kenyonj/auto-investor/main/unraid/icon.png</Icon>
  <ExtraSearchTerms>trading stocks crypto alpaca claude ai bot investing</ExtraSearchTerms>
  <Requires>
    Alpaca API credentials (paper or live) and an Anthropic API key.
  </Requires>
  <Config
    Name="Web UI Port"
    Target="8000"
    Default="8000"
    Mode="tcp"
    Description="Port for the web dashboard"
    Type="Port"
    Display="always"
    Required="true"
    Mask="false"/>
  <Config
    Name="Data Directory"
    Target="/app/data"
    Default="/mnt/user/appdata/auto-investor"
    Mode="rw"
    Description="Persistent storage for SQLite database"
    Type="Path"
    Display="always"
    Required="true"
    Mask="false"/>
  <Config
    Name="Config File"
    Target="/app/config.yaml"
    Default="/mnt/user/appdata/auto-investor/config.yaml"
    Mode="ro"
    Description="Trading configuration file (watchlist, risk params, schedule)"
    Type="Path"
    Display="always"
    Required="false"
    Mask="false"/>
  <Config
    Name="Alpaca API Key"
    Target="ALPACA_API_KEY"
    Default=""
    Description="Alpaca API key (paper or live)"
    Type="Variable"
    Display="always"
    Required="true"
    Mask="true"/>
  <Config
    Name="Alpaca Secret Key"
    Target="ALPACA_SECRET_KEY"
    Default=""
    Description="Alpaca API secret key"
    Type="Variable"
    Display="always"
    Required="true"
    Mask="true"/>
  <Config
    Name="Anthropic API Key"
    Target="ANTHROPIC_API_KEY"
    Default=""
    Description="Anthropic API key for Claude AI"
    Type="Variable"
    Display="always"
    Required="true"
    Mask="true"/>
  <Config
    Name="Dashboard Port"
    Target="PORT"
    Default="8000"
    Description="Internal port for the web dashboard (should match Web UI Port)"
    Type="Variable"
    Display="advanced"
    Required="false"
    Mask="false"/>
</Container>
